.input

  &__elem
    border: 1px solid #E0E0E0
    border-color: #E0E0E0
    border-radius: 4px
    padding: * 17px
    min-height: 40px
    outline: 0
    text: $dark 300 16px
    font-family: $font
    width: 100%
    transition: .1s ease

    &::placeholder
      text: #757575

    &:hover
      border-color: #c7c7c7

    &:focus
      border-color: $main

  &--error
    ^&__elem
      border-color: #FF0F00
      text: #FF0F00

      &::placeholder
        text: #FF0F00