mixin breadcrumbs(name, name2)
  .breadcrumbs
    .breadcrumbs__item
      a.breadcrumbs__link(href="#!") cashbackservice.com

    if name2
      .breadcrumbs__item
        a.breadcrumbs__link(href="#!")= name2

      .breadcrumbs__item= name

    else
      .breadcrumbs__item= name


mixin page-title(title, tip)
  h2.page-title= title
    if tip
      .page-title__tip= tip


mixin shop-card(shop)
  .card.card--shop(class=[ shop.isFavorite && "card--is-favorite" ])
    if shop.top
      .card__label ТОП

    if shop.boost
      .card__label.card__label--green Кэшбэк 2x

    if shop.action
      .card__label.card__label--red Акция

    button.card__add-to-favorite

    .card__logo-wrapper
      img.card__logo-img(src=shop.logo)

    .card__cashback
      .card__cashback-text Кэшбэк до

      .card__cashback-value!= shop.percent + '<div class="card__cashback-small">%</div>'
        if shop.boost
          .card__cashback-value-old= shop.boost + "%"

    .card__more-info
      a.card__more-info-link(href="#!") Подробнее про кэшбэк в Rozetka

      a.btn.btn--wide(href="#!") Активировать


