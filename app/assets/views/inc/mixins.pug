mixin profile-aside(active)
  .profile__user
    .profile__user-avatar
    .profile__user-info
      .profile__user-name Александр Ивченко
      .profile__user-id ID: 7110559

  nav.profile__nav
    ul.profile__nav-list
      each item in profileNav
        li.profile__nav-item(class=[item.name === active ? "active" : ("Мои обращения" === active && "Помощь" === item.name) ? "active-sub" : ""])
          a.profile__nav-link(href=item.url + ".html" class="profile__nav-link--" + item.icon)= item.name

          if item.name === "Помощь"
            ul.profile__nav-sub-list(class=["Мои обращения" === active ? "active" : ""])
              a.profile__nav-sub-link(href="profile-ticket.html") Мои обращения